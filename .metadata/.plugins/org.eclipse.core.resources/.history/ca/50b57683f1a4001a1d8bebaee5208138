package org.mybatis.jpetstore.exceptions;

import javax.ws.rs.core.Response;
import javax.ws.rs.ext.ExceptionMapper;
import javax.ws.rs.ext.Provider;

@Provider
public class GenericExceptionMapper implements ExceptionMapper<QueryParamInvalidException>{

	@Override
	public Response toResponse(QueryParamInvalidException ex) {
		ErrorResponse response = new ErrorResponse(ex.getMessage(), "400");
		
		return Response.status(Response.Status.BAD_REQUEST).entity(response).build();
	}

}
