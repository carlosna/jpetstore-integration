package org.mybatis.jpetstore.rest;


import java.util.List;

import javax.inject.Inject;
import javax.ws.rs.Consumes;
import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.GenericEntity;
import javax.ws.rs.core.GenericType;
import javax.ws.rs.core.Response;
import javax.xml.bind.annotation.XmlRootElement;

import org.mybatis.jpetstore.facades.Product;
import org.mybatis.jpetstore.facades.ProductBean;

@Path("/products")
@Produces("application/json")
@Consumes("application/json")
@XmlRootElement
public class ProductEndpoint {
	
	@Inject
	ProductBean productBean;
	
	@GET
	public Response listAll() //@QueryParam("start") final Integer startPosition, 
			                  //   @QueryParam("max") final Integer maxResult) 
	{
		List<Product> produtos = productBean.getProducts();
		GenericEntity<List<Product>> lista = new GenericEntity<List<Product>>(produtos) {};
		return Response.status(Response.Status.OK).entity(lista).build();
	}
	
}
