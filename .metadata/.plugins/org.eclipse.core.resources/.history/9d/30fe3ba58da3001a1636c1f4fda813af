package org.mybatis.jpetstore.rest;


import org.mybatis.jpetstore.service.ProductService;
import org.springframework.beans.factory.annotation.Autowired;


public class ProductEndpoint {
	
	@Autowired
	ProductService service;
	
	@GET
	public Response listAll() //@QueryParam("start") final Integer startPosition, 
			                  //   @QueryParam("max") final Integer maxResult) 
	{
		
		return Response.status(Response.Status.OK).entity(service.getAllProducts()).build();
	}
	
}
